<div class="index">
  <header>
    <h2 class="evaluation-header"> Evaluaci√≥n del profesor <%= User.find_by(id: @evaluation.user).name %></h2>
  </header>
  <table class="table table-striped table-hover">
    <% contador = 0%>
    <% for i in 0..2%>

    <thead class="categoryTitle <%="cat#{i}"%>">
      <td colspan="6"><%=@categories[i]%></td>
    </thead>
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Pregunta</th>
        <th>Habilidad</th>
        <th>Respuesta</th>
      </tr>
    </thead>
    <tbody>

      <%  @question_category[i].each do |q| %>
      <tr class="primary">
        <% contador +=1 %>
        <td> <%= contador%></td>
        <td> <%=q.name %> </td>
        <td> <%=q.skill %> </td>
        <td> <%= q.text %>  </td>
      </tr>
      <%end%>
    </tbody>
    <%end%>
  </table>


  <div class="text-center">
    <a href="/evaluate" class="btn btn-primary btn-lg">Regresar</a>
    <a href="/show_stadistics/<%=@evaluation.id%>" class="btn btn-primary btn-lg">Estadisticas</a>
  </div>
</div>
