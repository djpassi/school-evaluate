<div class="page-header">
  <div class="header">
    <h1> Evaluar Profesor </h1>
  </div>
</div>
<div id='start-evaluate' class="index">

<%= form_tag(new_evaluation_path, method: "get") do %>

<%= label_tag 'Pauta a elegir:' %>
<%= select_tag(:survey_id, options_for_select(SurveySchema.all.collect{ |u| [u.title, u.id] }),{:class=>'form-control',:id=>'select-evaluate'}) %>
</br>
<%= label_tag 'Profesor a evaluar: ' %>

<%= select_tag(:user_id, options_for_select(User.all.collect{ |u| [u.name, u.id] }),{:class=>'form-control',:id=>'select-evaluate'}) %>


</br>

  <%= submit_tag("Comenzar evaluación", :class=>'btn btn-primary btn-lg') %>


<% end %>
<br>
<br>
<h2 style="text-align:center"> Evaluaciones recientes </h2>
<br>
<br>

  <table class="table table-striped table-hover ">
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Profesor</th>
        <th>Fecha de evaluación</th>
        <th>Ver</th>
      </tr>
    </thead>
    <tbody>
      <% contador = 0%>
      <% @evaluations.each do |evaluation|%>
      <tr>
        <% contador +=1 %>
        <td> <%= contador %></td>
        <td><%= User.find_by(id:evaluation.user_id).name %></td>
        <td><%= evaluation.created_at %></td>
      </tr>
      <%end%>
    </tbody>
  </table>
