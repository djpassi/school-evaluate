<h1>Evaluar profesor</h1>

<%= form_tag(new_evaluation_path, method: "get") do %>

<%= label_tag 'Pauta a elegir: ' %>
<%= select_tag(:survey_id, options_for_select(SurveySchema.all.collect{ |u| [u.title, u.id] })) %>
</br>
<%= label_tag 'Profesor a evaluar: ' %>
<%= select_tag(:user_id, options_for_select(User.all.collect{ |u| [u.name, u.id] })) %>
</br>

  <%= submit_tag("Evaluar") %>
<% end %>

<div class="index">
  <table class="table table-striped table-hover ">
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Profesor</th>
        <th>Fecha de evaluaci√≥n</th>
        <th>Ver</th>
      </tr>
    </thead>
    <tbody>
      <% contador = 0%>
      <% @evaluations.each do |evaluation|%>
      <tr>
        <% contador +=1 %>
        <td> <%= contador %></td>
        <td><%= User.find_by(id:evaluation.user_id).name %></td>
        <td><%= evaluation.created_at %></td>
        <td> <%= link_to "Mostrar respuestas", show_evaluation_path(evaluation.evaluation_number)%> </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>
