
<div class="page-header">
  <div class="header">
    <h1> Evaluaciones recientes </h1>
  </div>
</div>

<div class="index">
<br>
<br>
  <table class="table table-striped table-hover ">
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Profesor</th>
        <th>Fecha de evaluaci√≥n</th>
        <th>Ciclo</th>
        <th>Ver</th>
      </tr>
    </thead>
    <tbody>
      <% contador = 0%>
      <% @evaluations.each do |evaluation|%>
      <tr>
        <% contador +=1 %>
        <td> <%= contador %></td>
        <td><%= User.find_by(id:evaluation.user_id).name %></td>
        <td><%= evaluation.created_at %></td>
        <%= ciclo = SurveySchema.find(evaluation.survey_schema_id).cycle%>
        <% if ciclo == '1' %>
          <td> Primero </td>
        <% elsif ciclo == '2' %>
          <td> Segundo </td>
        <% else %>
          <td> Tercero </td>
        <%end%>
        <td> <%= link_to "Mostrar respuestas", show_evaluation_path(evaluation.evaluation_number)%> </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>
