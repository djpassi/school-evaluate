  <div class="page-header">
    <div class="header">
      <h1> Banco de preguntas </h1>
    </div>
  </div>
  <div class="index">

    <div id="table-wrapper">
      <div id="table-scroll">
        <table class="table table-striped table-hover ">
          <thead>
            <tr class="primary">
              <th class="panel-title">#</th>
              <th>TÃ­tulo</th>
              <th>Tipo de pregunta</th>
              <th>Editar</th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tbody>
            <% contador = 0%>
            <% @questions.each do |question|%>
            <tr>
              <% contador +=1 %>
              <td> <%= contador %></td>
              <td><%= question.name%></td>
              <%if question.genre == "text" %>
                <td><input type="text" disabled class="scaleWrap"> </td>
              <%else%>
                <td><%= render 'likert_scale' %></td>
              <% end %>
              <div class="btn-group btn-group-justified">
              <td><%= link_to 'Editar', edit_question_path(question) %> </td>
              <td> <%= link_to 'Borrar', question, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>

    <br>
    <div class="text-right">

      <a href="questions/new" class="btn btn-primary btn-lg">Agregar nueva pregunta</a>
    </div>
  </div>
