<div class="backgroundLogin">
  <div class="page-header">
    <div class="header">
      <h1> Preguntas </h1>
    </div>
  </div>
  <div class="index">
    <table class="table table-striped table-hover ">
      <thead>
        <tr class="primary">
          <th class="panel-title">#</th>
          <th>TÃ­tulo</th>
          <th>Tipo de pregunta</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% contador = 0%>
        <% @questions.each do |question|%>
        <tr>
          <% contador +=1 %>
          <td> <%= contador %></td>
          <td><%= question.name%></td>
          <%if question.genre == "text" %>
            <td><input type="text" disabled class="scaleWrap"> </td>
          <%else%>
            <td><%= render 'likert_scale' %></td>
          <% end %>
          <div class="btn-group btn-group-justified">
          <td><%= link_to 'Edit', edit_question_path(question) %> </td>
          <td> <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <%end%>
      </tbody>
    </table>

    <br>
    <div class="btn-group btn-group-justified">
      <p><a href="questions/new" class="btn btn-primary btn-lg">New question</a></p>
    </div>
  </div>
</div>
