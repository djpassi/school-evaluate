  <div class="page-header">
    <div class="header">
      <h1> Banco de preguntas </h1>
    </div>
  </div>
  <div class="index">
    <table class="table table-striped table-hover ">
      <thead>
        <tr class="primary">
          <th class="panel-title"></th>
          <th>TÃ­tulo</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% contador = 0%>
        <% @questions.each do |question|%>
        <tr>
          <% contador +=1 %>
          <td> <%= contador %></td>
          <td><%= question.name%></td>
          <%if question.genre == "text" %>
            <td><input type="text" disabled class="scaleWrap"> </td>
          <%else%>
            <td><%= render 'likert_scale' %></td>
          <% end %>
          <div class="btn-group btn-group-justified">
          <td><%= link_to 'Editar', edit_question_path(question) %> </td>
          <td> <%= link_to 'Eliminar', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <%end%>
      </tbody>
    </table>

    <br>
    <div class="text-right">

      <a href="questions/new" class="btn btn-primary btn-lg">Agregar nueva pregunta</a>
    </div>
  </div>
