<div class="page-header">
  <div class="header">
    <h1> Banco de preguntas </h1>
  </div>
</div>
<div class="index">
  <table class="table table-striped table-hover ">
  <% contador = 0%>
  <% for i in 0..@categories.length-1 %>
    <thead class="categoryTitle <%="cat#{i}"%>">
      <td colspan="6"><%=@categories[i]%></td>
    </thead>
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>TÃ­tulo</th>
        <th>Habilidad</th>

        <th>Editar</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @questions_category[i].each do |question|%>
        <%if question.genre == "score"%>
          <tr>
            <% contador +=1 %>
            <td> <%= contador %></td>
            <td><%= question.name%></td>
            <td> <%= question.skill %></td>
            <td><%= link_to 'Editar', edit_question_path(question) %> </td>
            <td> <%= link_to 'Eliminar', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <%end%>
      <%end%>
    </tbody>
    <%end%>
  </table>
  <br>
  <div class="text-right">
    <a href="questions/new" class="btn btn-primary btn-lg">Agregar nueva pregunta</a>
  </div>
</div>
