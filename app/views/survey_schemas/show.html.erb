<p id="notice"><%= notice %></p>



<div class="backgroundLogin">
  <div class="page-header">
    <div class="header">
      <h1> <%=@survey_schema.title%> </h1>
    </div>
  </div>
  <div class="form1">
    <div id="table-wrapper">
      <div id="table-scroll">
        <table class="table table-striped table-hover ">
          <thead>
            <tr class="primary">
              <th class="panel-title">#</th>
              <th>Nombre de pregunta</th>
              <th>Tipo de pregunta</th>
            </tr>
          </thead>
          <tbody>
            <% contador = 0%>
            <%@survey_schema.questions.each do |question|%>
            <tr>
              <% contador +=1 %>
              <td> <%= contador %></td>
              <td><%= question.name%></td>
              <% if question.genre=='score'%>
              <td>Puntuación</td>
              <% else %>
              <td>Texto</td>
              <%end%>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
    <div class="btn-group btn-group-justified">
    <p>
      <a href="/survey_schemas" class="btn btn-primary">Ir a pautas de evaluación</a>
    </p>
  </div>

</div>
