<div class="page-header">
  <div class="header">
    <h1> Pauta de evaluación </h1>
    <h2> <%= @survey_schema.title %></h2>
    <% if @survey_schema.cycle == '1' %>
      <h2> Primer ciclo </h2>
    <% elsif @survey_schema.cycle == '2' %>
      <h2> Segundo ciclo </h2>
    <% else %>
      <h2> Tercer ciclo </h2>
    <% end%>
  </div>
</div>
<div class="index">

  <table class="table table-striped table-hover ">
  <% contador = 0%>
  <% for i in 0..@categories.length-1 %>
    <thead class="categoryTitle <%="cat#{i}"%>">
      <td colspan="6"><%=@categories[i]%></td>
    </thead>
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Título</th>
        <th>Tipo de pregunta</th>
        <th>Habilidad</th>
      </tr>
    </thead>
    <tbody>
      <% @questions_category[i].each do |question|%>
        <%if question.genre == "score"%>
          <tr>
            <% contador +=1 %>
            <td> <%= contador %></td>
            <td><%= question.name%></td>
            <%if question.genre == "text" %>
              <td><input type="text" disabled class="scaleWrap"> </td>
            <%else%>
              <td><%= render 'questions/likert_scale_clean' %></td>
            <% end %>
            <td> <%= question.skill %></td>
          </tr>
        <%end%>
      <%end%>
    </tbody>
    <%end%>
  </table>
  <br>
  <div class="text-right">
     <%= link_to "Volver",'/survey_schemas', class:"btn btn-primary btn-lg"%>
  </div>
</div>
