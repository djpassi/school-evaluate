<div class="page-header">
  <div class="header">
    <h1> Pauta de evaluación </h1>
    <h2> <%= @survey_schema.title %></h2>
    <% if @survey_schema.cycle == '1' %>
      <h2> Primer ciclo </h2>
    <% elsif @survey_schema.cycle == '2' %>
      <h2> Segundo ciclo </h2>
    <% else %>
      <h2> Tercer ciclo </h2>
    <% end%>
  </div>
</div>

<div class="index">
<%= form_for @survey_schema do |f| %>
  <%= label_tag 'Nombre pauta: ' %>
  <br>
  <%= f.text_field :title, required: true, class:"form-control text required"%>
  <br>
  <%= label_tag 'Ciclo: ' %>
  <br>
  <%= select_tag(:cycle, options_for_select([["Primero",'1'],["Segundo",'2'],["Tercero",'3']]),{:class=>'form-control',:id=>'select-evaluate'}) %>
  <br>
  <table class="table table-striped table-hover ">
  <% contador = 0%>
  <% for i in 0..@categories.length-1 %>
    <thead class="categoryTitle <%="cat#{i}"%>">
      <td colspan="6"><%=@categories[i]%></td>
    </thead>
    <thead>
      <tr class="primary">
        <th class="panel-title">#</th>
        <th>Título</th>
        <th>Tipo de pregunta</th>
        <th>Habilidad</th>
        <th>Agregar pregunta</th>
      </tr>
    </thead>
    <tbody>
      <% @questions_category[i].each do |question|%>
        <%if question.genre == "score"%>
          <tr>
            <% contador +=1 %>
            <td> <%= contador %></td>
            <td><%= question.name%></td>
            <%if question.genre == "text" %>
              <td><input type="text" disabled class="scaleWrap"> </td>
            <%else%>
              <td><%= render 'questions/likert_scale_clean' %></td>
            <% end %>
            <td> <%= question.skill %></td>
            <% if @questions_id.include? question.id  %>
              <td> <%= check_box_tag "questions[]", question.id, check: true %>  </td>
            <% else %>
              <td> <%= check_box_tag "questions[]", question.id %>  </td>
            <% end %>
          </tr>
        <%end%>
      <%end%>
    </tbody>
    <%end%>
  </table>
  <br>
  <div class="text-right">
    <%= f.submit("Editar pauta",class:"btn btn-primary btn-lg")  %>
  </div>
</div>

<% end %>
